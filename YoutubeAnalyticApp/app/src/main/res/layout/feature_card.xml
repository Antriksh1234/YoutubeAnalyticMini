<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp"
    android:background="@drawable/rounded_bg"
    android:layout_marginBottom="20dp">

    <TextView
        android:textSize="24sp"
        android:textColor="@color/white"
        android:id="@+id/feature_header"
        android:fontFamily="@font/raleway_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/summarize_text"/>

    <TextView
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:id="@+id/feature_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feature_header"
        android:layout_toStartOf="@id/feature_img"
        android:layout_marginEnd="4dp"
        android:text="@string/summarize_description"/>

    <ImageView
        android:id="@+id/feature_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/summarise"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>